<html> 
  <head>
    <title>All Recipes</title>
  </head>
  <body>
   
  <h1>Online Cookbook - All Recipes</h1>
  <table border="1">
  <tr>
  <td width="80%"><p align="center"><i><b>Recipe</b></i></td> 
    <td width="20%"><p align="center"><i><b>Date</b></i></td>
  </tr>
    
  <% @posts.each do |post| %>
  <tr>
  <td><%= link_to post.title, :action => "show", :id => post.id %></td>
  <td><%= post.created_date %></td>
  </tr>
  <% end %> 
  </table>
  <p><%= link_to "Create new post", :action => "new" %></p>

  </body> 
</html>